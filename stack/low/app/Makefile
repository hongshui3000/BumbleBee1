
#
# Root Directory for project
#
TOP= ./../projects

#
# Include the general platform independent Makefile
#
include $(TOP)/Makefile.include.gen

#*****************************************************************************#
#                               Object FILE LIST                              #
#*****************************************************************************#
OBJS= 	

#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#

NATIVE_OS_DIR=./mint_os

ifeq ($(TARGET_PATCHED_ROM_CODE), yes)
  ROM_PATCH_DIR=./rom_patch
endif

all: init_subdirs

#*****************************************************************************#
#                      RULES TO BUILD SUB DIRECTORIES
#*****************************************************************************#

init_subdirs:
	$(CD) $(NATIVE_OS_DIR) && $(MAKE) all
	$(CD) ..
ifeq ($(TARGET_PATCHED_ROM_CODE), yes)
	$(CD) $(ROM_PATCH_DIR) && $(MAKE) all
	$(CD) ..
endif

#*****************************************************************************#
#              GENERATE OBJECT FILE
#*****************************************************************************#

#*****************************************************************************#
#                             END OF MAKEFILE                                 #
#*****************************************************************************#

